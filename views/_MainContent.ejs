<style type="text/css">
  #next-prev {
    display: none;
    list-style: none;
    padding: 0;
    position: relative;
    top: 150px;
    width: 100%;
  }
  .prev {
    float: left;
  }
  .next {
    float: right;
  }
  #next-prev a {
    font-size: 72px;
    font-weight: 300;
    padding: 20px;
  }
</style>

<div id="maincontent" >
  <ul id="next-prev">
    <li class="prev"><a href="#0"><i class="fa fa-chevron-left" aria-hidden="true"></i></a></li>
    <li class="next"><a href="#0"><i class="fa fa-chevron-right" aria-hidden="true"></i></a></li>
  </ul>
  <% resources.forEach(function(resource) { %>
    <figure class="h-resource" data-res_id=<%=resource.id%>>
      <a id="punch" class="close" href="/">X</a>
      <img src="<%= resource.media_src %>">
      <figcaption class='resourceTitle'><%= resource.title %></figcaption>
      <p><%= resource.description %></p>
      <figcaption>
        <% include ../views/_Icons %>
        <span><em><a class="res-url res-source" href="<%= resource.url %>" target="_blank" >source</a></em></span>
      </figcaption>
      <form method="POST" action="" class="new-comment" style="display: none;">
        <div class="form-group" style="width: 100%;">
          <label for="comment-text" style="display:none;">New comment</label>
          <textarea id="comment-text" name="text" placeholder="What do you think of this resource?"  class="form-control" rows="3" required></textarea>
          <button type="submit" class="btn btn-default">Send</button>
        </div>
      </form>      
    </figure>
  <% }) %>
</div>
