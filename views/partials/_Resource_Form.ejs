<form method = "POST" action = "/resources/" name = "resource_details" onsubmit="return validateForm()">
<div class="form-group row">
  <label for="resource-input" class="col-2 col-form-label">Title</label>
  <div class="col-10">
    <input name="title" class="form-control" type="text" value="<%=title%>" id="example-text-input">
  </div>
</div>

<div class="form-group row">
  <label for="resource-input" class="col-2 col-form-label">Resource URL</label>
  <div class="col-10">
    <input name="url" class="form-control" type="text" value="<%=url%>" id="example-text-input">
  </div>
</div>

<div class="form-group row">
  <label for="resource-input" class="col-2 col-form-label">Image URL</label>
  <div class="col-10">
    <input name="img_src" class="form-control imgSourceInput" type="text" value="http://kids.nationalgeographic.com/content/dam/kids/photos/animals/Mammals/Q-Z/sun-bear-tongue.jpg" id="example-text-input">
  </div>
</div>

<div class="form-group row">
  <label for="resource-input" class="col-2 col-form-label">Description</label>
  <div class="col-10">
    <input name="description" class="form-control" type="text" value="<%=description%>" id="example-text-input">
  </div>
</div>
<div class="form-group row">
  <div class="col-10 col-form-label">
    <label for="resource-input" class="col-2 col-form-label">Category</label>
    <select class="form-control" name="category">
        <option value="Agriculture">Agriculture</option>
        <option value="Architecture">Architecture</option>
        <option value="Biological and Biomedical Sciences">Biological and Biomedical Sciences</option>
        <option value="Business">Business</option>
        <option value="Communications and Journalism">Communications and Journalism</option>
        <option value="Computer Sciences">Computer Sciences</option>
        <option value="Culinary Arts and Personal Services">Culinary Arts and Personal Services</option>
        <option value="Education">Education</option>
        <option value="Engineering">Engineering</option>
        <option value="Environmental Science">Environmental Science</option>
        <option value="Legal">Legal</option>
        <option value="Liberal Arts and Humanities">Liberal Arts and Humanities</option>
        <option value="Mechanic and Repair Technologies">Mechanic and Repair Technologies</option>
        <option value="Medical and Health Professions">Medical and Health Professions</option>
        <option value="Physical Sciences">Physical Sciences</option>
        <option value="Psychology">Psychology</option>
        <option value="Project Management">Project Management</option>
        <option value="Transportation and Distribution">Transportation and Distribution</option>
        <option value="Visual and Performing Arts">Visual and Performing Arts</option>
        <option value="Other">Other</option>
      <select>
  </div>
</div>
<br>
<input id="confirm-resource" class="btn btn-danger btn-lg btn-block" type="submit" value = "Submit">

</form>
